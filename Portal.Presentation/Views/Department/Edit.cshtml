@model DepartmentVM
@{
	ViewData["Title"] = "Edit";
}


<!-- Content Header (Page header) -->
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Departments</h1>
			</div>
			<!-- /.col -->
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a asp-asp-controller="department" asp-action="index">Departments</a></li>
					<li class="breadcrumb-item active">Edit</li>
				</ol>
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /.content-header -->


<section class="content" id="new_department_form">
	<div class="container-fluid">
		<section class="row">
			<!-- left column -->
			<div class="col-md-6">
				<!-- general form elements -->
				<div class="card card-primary">
					<div class="card-header bg-dark">
						<h3 class="card-title">Edit <strong>@Model.Name</strong></h3>
					</div>
					<!-- /.card-header -->
					<!-- form start -->
					<form asp-controller="department" asp-action="edit" method="post" id="edit_dep" autocomplete="off" novalidate="novalidate">

						<input type="hidden" asp-for="Id" />

						<div class="card-body">
							<div class="form-group">
								<label>Department name</label>
								<input type="text" asp-for="Name" class="form-control" value="@Model.Name">
							</div>
							<div class="form-group">
								<label>Department code</label>
								<input type="text" asp-for="Code" class="form-control" value="@Model.Code">
							</div>
						</div>
						<!-- /.card-body -->

						<div class="card-footer bg-white">
							<div class="row">
								<div class="col-6">
									<input type="submit" class="btn btn-sm bg-primary d-block w-100" value="Update">
								</div>
								<div class="col-6">
									<a type="submit" asp-controller="department" asp-action="index" class="btn btn-sm bg-danger d-block">Cancel</a>
								</div>
							</div>
						</div>
					</form>
				</div>
				<!-- /.card -->
			</div>
		</section>
		<!-- /.row-->

	</div>
	<!-- /.container-fluid -->
</section>


