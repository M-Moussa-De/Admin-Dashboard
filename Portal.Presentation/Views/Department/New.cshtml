@model DepartmentVM
@{
	ViewData["Title"] = "New";
}


<!-- Content Header (Page header) -->
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Departments</h1>
			</div>
			<!-- /.col -->
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a asp-asp-controller="department" asp-action="index">Departments</a></li>
					<li class="breadcrumb-item active">New</li>
				</ol>
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content" id="new_department_form">
	<div class="container-fluid">
		<section class="row">
			<!-- left column -->
			<div class="col-md-6">
				<!-- general form elements -->
				<div class="card card-primary">
					<div class="card-header bg-dark">
						<h3 class="card-title">Add a new department</h3>
					</div>
					<!-- /.card-header -->
					<!-- form start -->
					<form asp-controller="department" asp-action="new" id="new_dep" autocomplete="off" novalidate="novalidate">
						<div class="card-body">
							@if (TempData["Error"] != null)
							{
								<div class="text-danger">
									@TempData["Error"]
								</div>
							}
							<div class="form-group">
								<label for="name">Department name</label>
								<input type="text" class="form-control" asp-for="Name" autofocus placeholder="Enter department name">
							</div>
							<div class="form-group">
								<label for="code">Department code</label>
								<input type="text" class="form-control" asp-for="Code" placeholder="Enter department code">
							</div>
						</div>
						<!-- /.card-body -->

						<div class="card-footer d-flex justify-content-end">
							<input type="submit" value="Save department" class="btn btn-sm bg-dark">
						</div>
					</form>
				</div>
				<!-- /.card -->
			</div>
		</section>
		<!-- /.row-->

	</div>
	<!-- /.container-fluid -->
</section>

@section Justvalidatejs {
	<script src="~/plugins/justvalidate/justvalidate.min.js"></script>
	<script src="~/plugins/justvalidate/justvalidate_new_dep.js"></script>
}
