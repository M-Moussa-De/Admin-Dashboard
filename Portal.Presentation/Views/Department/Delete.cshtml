@model DepartmentVM
@{
	ViewData["Title"] = "Delete";
}


<!-- Content Header (Page header) -->
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Departments</h1>
			</div>
			<!-- /.col -->
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a asp-asp-controller="department" asp-action="index">Departments</a></li>
					<li class="breadcrumb-item active">Delete</li>
				</ol>
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /.content-header -->


<section class="content" id="delete_department_confirm">
	<div class="container-fluid">
		<section class="row">
			<!-- left column -->
			<div class="col-6 text-center py-3 px-5 mx-auto bg-secondary">

				<h3>Deleting department <strong>@Model.Name</strong></h3>

				<h5 class="my-3">Are you sure?</h5>

				<div>
					<form asp-controller="department" asp-action="delete" class="row">
						<div class="col-6">
						<a asp-controller="department" asp-action="index" class="btn btn-sm btn-primary w-100">Cancel</a>
						</div>
						<div class="col-6">
						<input type="submit" value="Delete" class="btn btn-sm btn-danger w-100" />
						</div>
					</form>
				</div>

			</div>
		</section>
	</div>
</section>

